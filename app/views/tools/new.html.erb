<%= form_for @tool do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :quantity %>
  <%= f.text_field :quantity %>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <%= f.collection_select(:category_id, Category.all, :id, :name, {prompt: 'Select Category'}) %>
  <%= f.submit %>
<% end %>
